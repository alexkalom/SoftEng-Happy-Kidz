      }


//Script for handling errors from validation step in backend
$( document ).ready(function() {

 var errorList = <%-JSON.stringify(errors)%>;
 var whichTab = <%-JSON.stringify(tab)%>;
 var actualId = "";
 if(whichTab === "providerTab") {
  $("#Section1").removeClass("active")
  $("#Section1").removeClass("in")
  $("#personal-tab").removeClass("active")
  $("#Section2").addClass("in")
  $("#Section2").addClass("active")
  $("#business-tab").addClass("active") 
  errorList.forEach(function(myError){ 
    actualId = "business" + myError.param; 
    $('#' + actualId).addClass("error-input")
    $('#' + actualId).attr("placeholder", myError.msg) 
  });
 }
 else if(whichTab === "userTab"){
  errorList.forEach(function(myError){ 
  $('#' + myError.param).addClass("error-input")
  $('#' + myError.param).attr("placeholder", myError.msg) 
    });
 }

 
 
 
});




</script>


