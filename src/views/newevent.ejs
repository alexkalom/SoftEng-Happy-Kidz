                                <% }); %>
                        </select>
                </div>
                <div class="form-group col-md-12 col-sm-12" >
                    <label for="Description">Περιγραφή Event</label>
                    <textarea  maxlength = "5000" placeholder="το πολύ 5000 χαρακτήρες" cols = "40" rows = "20" class="form-control input-sm" id="Description" name="Description"></textarea>
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <label for="event-date">Ημερομηνία </label>
                    <input type="date" class="form-control input-sm" name="Date" id="event-date" >
                </div>
                <div class="form-group col-md-6 col-sm-6">
                    <label for="AgeGroup">Ηλικιακή Ομάδα Παιδιών</label>
                    <select class="form-control col-sm-2" name="AgeGroup" id="AgeGroup">
                                <option value="3">3-5</option>
                                <option value="6">6-8</option>
                                <option value="9">9-12</option>
                                <option value="13">>12</option>
                            </select>
          
                </div>
                <div class="form-group ">
                    <label for="city">Ανέβασμα εικώνων </label>
                    <div id="files">
                      
                    </div>
                    <button style = "margin-top:5px;" class="btn btn-success add-new-image">Προσθήκη εικώνας</button>
                </div>
            </div>
            <div class="col-md-6 col-sm-12"  >

        <div class="form-group">
            <label for="latlng">Εισάγετε την τοποθεσία του Event(θα γίνει αναζήτηση στο χάρτη)</label>
            <input id="latlng" type="text" name = "location" class="form-control input-sm">
        </div>
        <div class="form-group">
            <button type="button" id = "submit" class="btn btn-default" >Αναζήτηση</button>
        </div>
        
        <div id="map" class="form-group " ></div>
    
    <script>
        var latlng;
      function initMap() {
        var uluru = {lat: 37.983810 , lng: 23.727539}
        var map = new google.maps.Map(document.getElementById('map'), {
          center: uluru,
          zoom: 10
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });

        var geocoder = new google.maps.Geocoder;
        var infowindow = new google.maps.InfoWindow;

        document.getElementById('latlng').addEventListener('keypress', function() {
          geocodeAddress(geocoder, map, infowindow,marker);
        });
      }

      function geocodeAddress(geocoder, resultsMap, infowindow,marker) {
        var input = document.getElementById('latlng').value;
        //var latlngStr = input.split(',', 2);
        //var latlng = {lat: parseFloat(latlngStr[0]), lng: parseFloat(latlngStr[1])};
        geocoder.geocode({'address': input}, function(results, status) {
          if (status === 'OK') {
            latlng = results[0].geometry.location;
            resultsMap.setCenter(results[0].geometry.location);
            marker.setOptions({
              map: resultsMap,
              position: results[0].geometry.location
            });
          } else {
            
          }
        });

        };
      
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBC7V-i6x2AWc0nSbMo51tkcnfiteuKuo&callback=initMap">
    </script>
    
    
